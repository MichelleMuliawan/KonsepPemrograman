#include <stdio.h>

int main()
{
    int angka;
    char huruf;
    printf ("Masukan angka = ");
    scanf("%d", &angka);
    if (angka >= 0 && angka < 44 )
    huruf = 'E';
    else if (angka >=45 && angka < 54 )
    huruf = 'D';
    else if (angka >= 55 && angka < 66 )
    huruf = 'C';
    else if (angka >= 67 && angka < 79 )
    huruf = 'B';
    else huruf = 'A';
    if (angka <= -1 || angka > 100)
    printf ("\nTidak Valid\n");
    else 
    printf ("\nHuruf Anda %c\n", huruf);

    return 0;
}

