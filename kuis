#include <stdio.h>

int main()
{    
    int angka;
    char huruf;
    printf ("Masukan angka = ");
    scanf("%d", &angka);
    if (angka >= 0)
        if (angka >=45)
            if (angka >= 55)
                if (angka >= 67)
                    if (angka >= 80)
                        huruf = 'A';
                    else huruf = 'B';
                else huruf = 'C';
            else huruf = 'D';
        else huruf = 'E';
    if (angka <= -1 || angka > 100)
    printf ("\nTidak Valid\n");
    else 
    printf ("\nHuruf Anda %c\n", huruf);

    return 0;
}


