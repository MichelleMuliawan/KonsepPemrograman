#include <stdio.h>
#include <conio.h>

int main()   
{
    char pilihan;
    float angka1, angka2, hasil;
    printf ("1. Penjumlahan\n");
    printf ("2. Pengurangan\n");
    printf ("3. Perkalian\n");
    printf ("4. Pembagaian\n");
    printf ("Masukan pilihan = ");
    scanf ("%c", &pilihan);
    printf ("\nMasukan angka pertama = ");
    scanf("%f", &angka1);
    printf ("Masukan angka kedua = ");
    scanf("%f", &angka2);
    switch (pilihan)
    {   case '1': 
        hasil = angka1 + angka2; 
        printf("Hasil %0.3f", hasil); break;
        case '2': 
        hasil = angka1 - angka2; 
        printf("Hasil %0.3f", hasil); break;
        case '3': 
        hasil = angka1 * angka2; 
        printf("Hasil %0.3f", hasil); break;
        case '4': 
        hasil = angka1 / angka2; 
        printf("Hasil %0.3f", hasil); break;
        default : printf("Tidak Valid\n");
    }

    return 0;
}
                   
